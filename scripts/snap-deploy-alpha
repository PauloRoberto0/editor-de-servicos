#!/bin/bash
set -x
set -e
set -o pipefail

ssh -F .sshconfig alpha 'sudo /bin/bash -s' << "EOF"
set -x
set -e
set -o pipefail

tmp="$(mktemp -d)"
git clone "https://github.com/servicosgovbr/docker.git" "${tmp}"
cd "$tmp"

docker-compose kill editor1 editor2
docker-compose rm -f editor1 editor2
./build
docker-compose up editor1 editor2

EOF
