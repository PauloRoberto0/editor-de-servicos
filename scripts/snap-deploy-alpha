#!/bin/bash
set -x
set -e
set -o pipefail

ssh -F .sshconfig alpha 'sudo /bin/bash -s' << "EOF"
set -x
set -e
set -o pipefail

tmp="$(mktemp -d)"
git clone "https://github.com/servicosgovbr/docker.git" "${tmp}"
cd "$tmp"

docker-compose stop
docker-compose kill
docker-compose rm -f
./build
docker-compose up

EOF
